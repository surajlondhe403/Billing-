@{
}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>Welcome to Your Dashboard</h2>
            <p>Stay updated with your account information and activities.</p>
        </div>
    </div>
    <div id="dashboard-carousel" class="carousel slide mb-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://www.thestatesman.com/wp-content/uploads/2019/12/iStock-599972976_ED.jpg" class="d-block w-100" alt="Carousel Image 1" style="height: 300px;">
            </div>
            <div class="carousel-item">
                <img src="https://newztodays.com/wp-content/uploads/2022/04/mepco-bill.jpg" class="d-block w-100" alt="Carousel Image 2" style="height: 300px;">
            </div>
            <div class="carousel-item">
                <img src="https://www.discountwalas.com/wp-content/uploads/2022/01/current-bill.jpg" class="d-block w-100" alt="Carousel Image 3" style="height: 300px;">
            </div>
        </div>
        <a class="carousel-control-prev" href="#dashboard-carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#dashboard-carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="container mt-4">

    <div class="row mt-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Account Information</h5>
                    <p class="card-text">View and manage your account details.</p>
                    <a class="btn btn-primary" asp-controller="UserFunctionality" asp-action="Index">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Recent Activity</h5>
                    <p class="card-text">Track your recent actions and updates.</p>
                    <a class="btn btn-primary" asp-controller="UserFunctionality" asp-action="Index">View Activity</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Statistics</h5>
                    <p class="card-text">See your account statistics and usage.</p>
                    <a class="btn btn-primary" asp-controller="UserFunctionality" asp-action="Index">View Statistics</a>
                </div>
            </div>
        </div>
    </div>
</div>