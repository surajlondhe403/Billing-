@model UtilityBill.BillDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BillDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId">Select User:</label>
                <select asp-for="UserId" class="form-control" required>
                    <option value="">-- Select User --</option>
                    @if (ViewBag.UsersWithoutBill != null)
                    {
                        @foreach (var user in ViewBag.UsersWithoutBill) // Add this property in the model or ViewBag.
                        {
                            <option value="@user.UserId">@user.Username</option>
                        }
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="UnitsConsumed" class="control-label"></label>
                <input asp-for="UnitsConsumed" class="form-control" />
                <span asp-validation-for="UnitsConsumed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TotalBill" class="control-label"></label>
                <input asp-for="TotalBill" class="form-control" />
                <span asp-validation-for="TotalBill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rate" class="control-label"></label>
                <input asp-for="Rate" class="form-control" />
                <span asp-validation-for="Rate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillDate" class="control-label"></label>
                <input asp-for="BillDate" class="form-control" />
                <span asp-validation-for="BillDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BillStatus" class="control-label"></label>
                <select asp-for="BillStatus" class="form-control">
                    <option value="UNPAID">UNPAID</option>
                    <option value="PAID">PAID</option>
                </select>
                <span asp-validation-for="BillStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class ="form-control" asp-items="ViewBag.UserId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
